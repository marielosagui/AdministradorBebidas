<body>
    <div class="jumbotron">
  <h1> Administrador de Bebidas</h1>
  <br>
  <form action="/api" id="fTareas" name="fTareas" method="post">
    <div>
        <div class="form-group col-md-6" action="/api" id="fTareas" name="fTareas" method="post">
          <label for="nombre">Nombre</label>
          <input type="text" class="form-control" name="nombre" placeholder="Nombre Bebida">
        </div>
        <div class="form-group col-md-6">
            <label for="tipo">TIPO</label>
            <input type="text" class="form-control" name="tipo"  placeholder="jugo">
          </div>
        <div class="form-group col-md-6">
          <label for="tipo">PRECIO</label>
          <input type="text" class="form-control" name="precio"  placeholder="$1.00">
        </div>
        <div class="form-group col-md-6">
            <label for="tipo">DISTRIBUIDOR</label>
            <input type="text" class="form-control" name="distribuidor"  placeholder="constancia">
          </div>
    </div>
    <input type="submit" class="btn btn-outline-danger" value=" ENVIAR ">
  </form>
</div>
  <br>
  <br>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Tipo</th>
        <th>Precio</th>
        <th>Distribuidor</th>
        <th>Opciones</th>
      </tr>
    </thead>
    <tbody id="llenar"></tbody>
  </table>


  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
